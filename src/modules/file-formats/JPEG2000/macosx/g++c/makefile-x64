.PHONY: clean
clean:
	rm -f $(OBJ_FILES) $(DEP_FILES) $(OBJ_DIR)/JPEG2000-pxm.dylib

.PHONY: post-build
post-build:
	cp $(OBJ_DIR)/JPEG2000-pxm.dylib $(PCLBINDIR64C)
	codesign --deep --options=runtime -s pleiades -f -v --timestamp $(PCLBINDIR64C)/JPEG2000-pxm.dylib

